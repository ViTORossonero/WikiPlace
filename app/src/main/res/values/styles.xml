<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textColorPrimary">@color/primaryTextColor</item>
        <item name="textColorPrimaryInverse">@color/primaryTextColorInverse</item>
        <item name="textColorSecondary">@color/secondaryTextColor</item>

        <item name="textAppearanceTitle">@style/TextAppearanceTitle</item>
        <item name="textAppearanceSubtitle">@style/TextAppearanceSubtitle</item>

        <item name="toolbarOpaqueStyle">@style/ToolbarStyle.Opaque</item>
    </style>

    <!-- ToolbarStyle -->
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?android:attr/actionBarSize</item>
        <item name="titleTextColor">?textColorPrimaryInverse</item>
    </style>

    <style name="ToolbarStyle.Opaque">
        <item name="android:background">?colorAccent</item>
    </style>

    <style name="TextAppearanceTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">?textColorPrimary</item>
    </style>

    <style name="TextAppearanceSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?textColorSecondary</item>
    </style>

</resources>
